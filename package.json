{
  "name": "advent-2018",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "tvand <tvandort1@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "commander": "^2.19.0",
    "es6-promise": "^4.2.5",
    "moment": "^2.29.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.0.2",
    "lodash": "^4.17.11",
    "prettier": "^1.15.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1"
  },
  "scripts": {
    "test": "jest --watch",
    "test:debug": "node --inspect-brk -r ts-node/register ./node_modules/jest/bin/jest.js --runInBand --watch",
    "start": "ts-node src/index.ts",
    "prettier:all": "prettier ./src/** --write",
    "tslint:all": "tslint src/**/*.ts",
    "prebuild": "yarn tslint:all && yarn prettier:all",
    "build": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn tslint --fix",
      "git add"
    ],
    "*.{ts,json,js}": [
      "yarn prettier --write",
      "git add"
    ]
  }
}
