{
  "name": "advent-2018",
  "version": "1.0.0",
  "main": "index.js",
  "author": "tvand <tvandort1@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "es6-promise": "^4.2.5"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.11",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1"
  },
  "scripts": {
    "test": "jest --watch",
    "test:debug": "ts-node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "start": "ts-node src/index.ts",
    "prettier:all": "prettier ./src/** --write",
    "tslint:all": "tslint src/**/*.ts",
    "prebuild": "yarn tslint && yarn prettier:all",
    "build": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "yarn tslint --fix",
        "git add"
      ],
      "*.{ts,json,js,txt}": [
        "yarn prettier --write",
        "git add"
      ]
    }
  }
}
